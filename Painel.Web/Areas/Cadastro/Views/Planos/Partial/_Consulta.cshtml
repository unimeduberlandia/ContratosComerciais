@model Painel.Web.Areas.Cadastro.Models.PlanosViewModel

@{
    ViewBag.Title = "Nova Consulta";
    Layout = "~/Views/Shared/_Servicos.cshtml";
}
@section css {
    <link href="~/Contents/plugins/sweetalert/sweetalert2.min.css" rel="stylesheet" />
    @*<link href="~/Areas/Cadastro/Contents/css/empresas.css" rel="stylesheet" />*@
    <link href="~/Contents/plugins/pace/pace.css" rel="stylesheet" />
    <link href="~/Contents/css/jquery.fancybox.css" rel="stylesheet" />
}
@section js{
    <script src="~/Contents/js/jquery.mask.min.js"></script>
    <script src="~/Contents/plugins/pace/pace.min.js"></script>
    <script src="~/Contents/js/jquerydownloader.min.js"></script>
    <script src="~/Contents/js/jquery.fancybox.js"></script>
    <script src="~/Contents/plugins/block-ui/jquery.blockUI.min.js"></script>
    <script>
        $(document).ready(function () {


        }
    </script>
}


@using (Html.BeginForm("BuscarPlanos", "Planos", FormMethod.Post))
{
    <section class="content-header">
        <h1>
            Buscar Plano por código
        </h1>
    </section>

    <section class="content">
        @Html.AntiForgeryToken()
        <div class="col-lg-6 col-xs-12">
            <div class="box box-success box-solid">
                <div class="box-body">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                @Html.LabelFor(model => model.codigoconsulta)
                                @Html.TextBoxFor(model => model.codigoconsulta, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.codigoconsulta, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <br />
                                <button type="submit" class="btn btn-success btn-block">
                                    <i class="fa fa-search"></i> Consultar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


