@model Painel.Web.Areas.Configuracao.Models.UsuarioViewModel


@using (Html.BeginForm("Editar", "Usuarios", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="col-lg-12">
        @Html.AntiForgeryToken()
        <div class="form-group has-feedback">
            @Html.LabelFor(model => model.Login)
            @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @readonly = "true" })
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <div class="form-group">
            @Html.CheckBoxListFor(model => model.PermissoesIds,
                                  model => model.TodasPermissoes,
                                  permissao => permissao.Id,
                                  permissao => permissao.Descricao,
                                  model => model.PermissoesSelecionadas,
                                  MvcCheckBoxList.Model.Position.Vertical)

        </div>

        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
}




