@model Painel.Web.Areas.Configuracao.Models.PermissaoViewModel

@using (Html.BeginForm("Cadastro", "Permissoes", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="col-lg-12">
        @Html.AntiForgeryToken()

        <div class="form-group has-feedback">
            @Html.LabelFor(model => model.Descricao)
            @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <div class="form-group has-feedback">
            @Html.LabelFor(model => model.Regras)
            @Html.TextBoxFor(model => model.Regras, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Regras)
        </div>

        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
}

<script>
    $('#Regras').tagsInput();
</script>